<div class="mt-4 wm-footer-grid container-fluid container">
	<div class="wm-footer row">
		<div class="col">
			<div class="row">
				<div class="col">
					<div class="container wm-footer-wikimedia-info">
						<div class="row">
							<div class="wmf-logo"></div>
						</div>
						<div class="row">
							<span>{{{info}}}</span>
						</div>
					</div>
				</div>
				<div class="d-none d-lg-block d-xl-block col">
					<div class="wm-footer-buttons row">
						<div class="col">
							<a class="btn wm-button wm-framed" href="{{contact.href}}">{{contact.text}}</a>
							<a class="btn wm-button wm-framed" href="{{about-wm.href}}">{{about-wm.text}}</a>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col">
					{{#if links}}
						<div class="row wm-footer-link-container">
							{{#each links as |group header|}}
								<div class="col {{#if group.isFirst}}col-6{{else}}col-3{{/if}}">
									<div class="wm-footer-link-group">
										<div class="wm-footer-link-group-name">
											<h3>{{header}}</h3>
										</div>
										<div class="wm-footer-link-group-links">
											{{#each group.items}}<a class="btn wm-button" href="{{href}}">{{text}}</a>{{/each}}
										</div>
									</div>
								</div>
							{{/each}}
						</div>
					{{/if}}
				</div>
			</div>
			<div class="row">
				<div class="col">
					<div class="wm-footer-disclaimer">{{{disclaimer}}}</div>
				</div>
			</div>
		</div>
	</div>
</div>
