<?xml version="1.0" encoding="utf-8"?>
<structure xmlns="https://cmln.github.io/chameleon/schema/3.0/layout.rng">
	<grid class="flex-fill wm-container">
		<row class="wm-header fixed-top d-none d-md-none d-lg-flex d-xl-flex">
			<cell class="wm-header-inner">
				<row>
					<cell class="flex-grow-0">
						<component type="MediaWiki\Skin\WikimediaApiPortal\Component\Header\Logo" addLink="yes"/>
					</cell>
					<cell>
						<component type="NavbarHorizontal" class="mb-3 mt-2 mt-cmln-0">
							<component type="MediaWiki\Skin\WikimediaApiPortal\Component\Header\NavMenu" includePageNav="no"/>
						</component>
					</cell>
					<cell class="ml-auto col-12 col-cmln">
						<row class="flex-row-reverse">
							<component type="MediaWiki\Skin\WikimediaApiPortal\Component\Header\UserMenu" />
							<component type="MediaWiki\Skin\WikimediaApiPortal\Component\Header\NotificationAlert" />
							<component class="d-none d-md-none d-sm-none d-lg-none d-xl-flex" type="MediaWiki\Skin\WikimediaApiPortal\Component\Header\SearchBar" hidden="no" />
							<component class="search-lg d-none d-sm-none d-xl-none d-md-flex d-lg-flex" type="MediaWiki\Skin\WikimediaApiPortal\Component\Header\SearchBar" hidden="yes" />
						</row>
					</cell>
				</row>
			</cell>

		</row>
		<row class="wm-header fixed-top d-block d-sm-block d-md-block d-lg-none d-xl-none">
			<cell class="wm-header-inner">
				<row>
					<cell class="wm-nav">
						<component type="NavbarHorizontal">
							<component type="MediaWiki\Skin\WikimediaApiPortal\Component\Header\NavMenu" includePageNav="yes"/>
						</component>
					</cell>
					<cell>
						<component type="MediaWiki\Skin\WikimediaApiPortal\Component\Header\Logo" addLink="yes"/>
					</cell>
					<cell class="wm-tools">
						<row class="flex-row-reverse">
							<component type="MediaWiki\Skin\WikimediaApiPortal\Component\Header\UserMenu" />
							<component type="MediaWiki\Skin\WikimediaApiPortal\Component\Header\NotificationAlert" />
							<component type="MediaWiki\Skin\WikimediaApiPortal\Component\Header\SearchBar" hidden="yes" class="search-sm"/>
						</row>
					</cell>
				</row>
			</cell>

		</row>

		<!-- Currently disables - might be needed in the future
		<row class="wm-tools">
			<cell class="wm-breadcrumbs-container">
				<component type="MediaWiki\Skin\WikimediaApiPortal\Component\Breadcrumbs" />
			</cell>
		</row>
		-->

		<row class="wm-content">
			<cell class="col-md-auto no-gutters page-nav-cnt d-none d-lg-block d-xl-block">
				<component type="MediaWiki\Skin\WikimediaApiPortal\Component\PageNav" expandAll="no"/>
			</cell>
			<cell class="col-lg wm-main-content">
				<component type="MediaWiki\Skin\WikimediaApiPortal\Component\MainContent"/>
			</cell>
		</row>
	</grid>

	<grid class="mt-4 wm-footer-grid container-fluid">
		<row class="wm-footer">
			<cell>
				<row>
					<cell>
						<component type="MediaWiki\Skin\WikimediaApiPortal\Component\Footer\WikimediaInfo"/>
					</cell>
					<cell class="d-none d-lg-block d-xl-block">
						<row class="wm-footer-buttons">
							<cell>
								<component type="MediaWiki\Skin\WikimediaApiPortal\Component\LinkButton" framed="yes" link="contact"/>
								<component type="MediaWiki\Skin\WikimediaApiPortal\Component\LinkButton" framed="yes" link="about_wm"/>
							</cell>
						</row>

					</cell>
				</row>
				<row>
					<cell>
						<component type="MediaWiki\Skin\WikimediaApiPortal\Component\Footer\FooterLinks"/>
					</cell>
				</row>
				<row>
					<cell>
						<component type="MediaWiki\Skin\WikimediaApiPortal\Component\Footer\Disclaimer"/>
					</cell>
				</row>

			</cell>
		</row>
	</grid>
</structure>
